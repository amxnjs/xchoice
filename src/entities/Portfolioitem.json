{
  "name": "PortfolioItem",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "project",
        "achievement",
        "experience",
        "skill"
      ]
    },
    "date": {
      "type": "string",
      "format": "date"
    },
    "file_url": {
      "type": "string"
    },
    "link": {
      "type": "string"
    }
  },
  "required": [
    "user_email",
    "title",
    "category"
  ],
  "rls": {
    "read": {
      "$or": [
        {
          "user_email": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "write": {
      "$or": [
        {
          "user_email": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}